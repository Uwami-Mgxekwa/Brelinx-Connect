{
  "appId": "com.brelinx.connect",
  "appName": "Brelinx Connect",
  "webDir": ".",
  "server": {
    "androidScheme": "https"
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#2d8a5f",
      "androidSplashResourceName": "splash",
      "showSpinner": false
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#2d8a5f"
    },
    "Keyboard": {
      "resize": "ionic",
      "style": "dark",
      "resizeOnFullScreen": true
    }
  }
}